<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context="ib.facmed.unam.mx.simexfacmed.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingRight="10dp"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/icono_simex"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.07"
                android:text="SIMex"
                android:textColor="@color/colorPrimary"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.003"
                android:background="@color/colorPrimary" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:id="@+id/marker"
                android:onClick="goMaps"
                android:src="@drawable/marker"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.07"
                android:text="Mapas"
                android:textColor="@color/colorPrimary"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.003"
                android:background="@color/colorPrimary" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/indice"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.07"
                android:text="Ponentes"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/libreta"
                android:onClick="goPress"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.07"
                android:text="Programas"
                android:textColor="@color/colorPrimary"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.003"
                android:background="@color/colorPrimary" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/cubo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.07"
                android:text="Expositores"
                android:textColor="@color/colorPrimary"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.003"
                android:background="@color/colorPrimary" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/lupa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.07"
                android:text="Busqueda"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:padding="5dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/text_creditos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="Creditos"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/logo_facmed" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
